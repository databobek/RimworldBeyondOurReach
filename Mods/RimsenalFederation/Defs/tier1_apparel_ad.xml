		<statBases>
			<Mass>1.0</Mass>
			<MaxHitPoints>525</MaxHitPoints>
			<ArmorRating_Sharp>0.225</ArmorRating_Sharp>
			<ArmorRating_Heat>0.3</ArmorRating_Heat>
			<Insulation_Cold>23</Insulation_Cold>
			<Insulation_Heat>8</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<costList>
			<BOR_Sunsteel>20</BOR_Sunsteel>
			<BOR_Sunweave>30</BOR_Sunweave>
		</costList>
		<thingCategories>
			<li>BOR_Apparel</li>
		</thingCategories>
		<generateCommonality>0.05</generateCommonality>
		<apparel>
			<tags>
				<li>ADJS</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
			<wornGraphicPath>Things/Apparel/FedSuit</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Torso</li>
