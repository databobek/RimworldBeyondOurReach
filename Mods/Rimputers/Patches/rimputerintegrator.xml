<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <!-- Rimputers 1.5 -->
    <Operation Class="BeyondOurReachModSettings.PatchOperationModSettings">
        <modSettingDef>BOR_Setting_IntegrateRimputers15IntoBORTechTree</modSettingDef>
        <enabled Class="PatchOperationAdd">
            <xpath>Defs/ResearchProjectDef[tab="BOR_Research_Tab"]/requiredResearchFacilities</xpath>
            <value>
                <li>Rimputer_quantumcomputer</li>
            </value>
        </enabled>
    </Operation>

    <!-- Rimputers No Dubs Bad Hygiene -->
    <Operation Class="BeyondOurReachModSettings.PatchOperationModSettings">
        <modSettingDef>BOR_Setting_IntegrateRimputersNODBHIntoBORTechTree</modSettingDef>
        <enabled Class="PatchOperationAdd">
            <xpath>Defs/ResearchProjectDef[tab="BOR_Research_Tab"]/requiredResearchFacilities</xpath>
            <value>
                <li>Rimputer_quantumcomputer</li>
            </value>
        </enabled>
    </Operation>
    
</Patch>