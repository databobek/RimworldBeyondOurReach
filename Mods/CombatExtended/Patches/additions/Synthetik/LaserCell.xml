<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Synthetik - Vehicle</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<!-- ==================== Ammo ========================== -->
			<value>
				<ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo09cmSplitBase">
					<defName>BOR_Ammo_SynthetikLaserCellTC</defName>
					<label>Laser energy cell with Tenebrite</label>
					<graphicData>
						<texPath>Synthetik/Ammo/Laser/LaserCell</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<ammoClass>BOR_TC_AmmoClass</ammoClass>
					<comps> <!-- Meant for the containment system failing-->
						<li Class="CombatExtended.CompProperties_ExplosiveCE">
							<explosiveRadius>3.75</explosiveRadius>
							<damageAmountBase>75</damageAmountBase>
							<explosiveDamageType>Thermobaric</explosiveDamageType>
							<chanceToStartFire>0.77</chanceToStartFire>
						</li>
					</comps>
					<generateCommonality>0.01</generateCommonality>
					<tradeTags>
						<li>BOR_Tech_III</li>
					</tradeTags>
				</ThingDef>

				<ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo09cmSplitBase">
					<defName>BOR_Ammo_SynthetikLaserCell_N</defName>
					<label>Laser energy cell (Neutronium)</label>
					<graphicData>
						<texPath>Synthetik/Ammo/Laser/Overdrive</texPath>
						<graphicClass>Graphic_StackCount</graphicClass>
					</graphicData>
					<ammoClass>BOR_Charged_N_AmmoClass</ammoClass>
					<comps> <!-- Meant for the containment system failing-->
						<li Class="CombatExtended.CompProperties_ExplosiveCE">
							<explosiveRadius>3.75</explosiveRadius>
							<damageAmountBase>75</damageAmountBase>
							<explosiveDamageType>Thermobaric</explosiveDamageType>
							<chanceToStartFire>0.8</chanceToStartFire>
						</li>
					</comps>
					<generateCommonality>0.01</generateCommonality>
					<tradeTags>
						<li>BOR_Tech_I</li>
					</tradeTags>
				</ThingDef>

				<!-- ================== Projectiles ================== -->

				<ThingDef ParentName="BaseSynthetikLaserCell">
					<defName>BOR_Bullet_SynthetikLaserCellTC</defName>
					<label>Energy tenebrite bolt</label>
					<graphicData>
						<texPath>Synthetik/Projectile/Laser_Projectile</texPath>
					</graphicData>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageAmountBase>24</damageAmountBase>
						<armorPenetrationSharp>45</armorPenetrationSharp>
						<armorPenetrationBlunt>0.0015</armorPenetrationBlunt>
						<secondaryDamage>
							<li>
								<def>Flame_Secondary</def>
								<amount>7</amount>
							</li>
						</secondaryDamage>
					</projectile>
				</ThingDef>

				<ThingDef ParentName="BaseSynthetikLaserCell">
					<defName>BOR_Bullet_SynthetikLaserCell_N</defName>
					<label>Energy bolt (Neutronium)</label>
					<graphicData>
						<texPath>Synthetik/Projectile/Overdrive_Projectile</texPath>
					</graphicData>
					<projectile Class="CombatExtended.ProjectilePropertiesCE">
						<damageAmountBase>21</damageAmountBase>
						<armorPenetrationSharp>60</armorPenetrationSharp>
						<armorPenetrationBlunt>0.0015</armorPenetrationBlunt>
						<secondaryDamage>
							<li>
								<def>Flame_Secondary</def>
								<amount>3</amount>
							</li>
						</secondaryDamage>
					</projectile>
				</ThingDef>

				<!-- ==================== Recipes ========================== -->

				<RecipeDef ParentName="AdvancedAmmoRecipeBase">
					<defName>MakeBOR_Ammo_SynthetikLaserCellTC</defName>
					<label>make laser tenebrite energy cell x200</label>
					<description>Craft 200 laser tenebrite energy cells.</description>
					<jobString>Making laser tenebrite energy cells.</jobString>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>BOR_QuasarAlloy</li>
								</thingDefs>
							</filter>
							<count>2</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>BOR_Tenebrite</li>
								</thingDefs>
							</filter>
							<count>4</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>SNS_Component_GenII</li>
								</thingDefs>
							</filter>
							<count>3</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>BOR_QuasarAlloy</li>
							<li>BOR_Tenebrite</li>
							<li>SNS_Component_GenII</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<BOR_Ammo_SynthetikLaserCellTC>200</BOR_Ammo_SynthetikLaserCellTC>
					</products>
					<workAmount>7200</workAmount>
				</RecipeDef>

				<RecipeDef ParentName="AdvancedAmmoRecipeBase">
					<defName>MakeBOR_Ammo_SynthetikLaserCell_N</defName>
					<label>make laser energy cell (Neutronium) x200</label>
					<description>Craft 200 laser energy (Neutronium) cells.</description>
					<jobString>Making laser energy (Neutronium) cells.</jobString>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>BOR_QuasarAlloy</li>
								</thingDefs>
							</filter>
							<count>2</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>BOR_Neutronium</li>
								</thingDefs>
							</filter>
							<count>40</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>SNS_Component_GenII</li>
								</thingDefs>
							</filter>
							<count>3</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>BOR_QuasarAlloy</li>
							<li>BOR_Neutronium</li>
							<li>SNS_Component_GenII</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<BOR_Ammo_SynthetikLaserCell_N>200</BOR_Ammo_SynthetikLaserCell_N>
					</products>
					<workAmount>3600</workAmount>
				</RecipeDef>
			</value>
		</match>
	</Operation>
</Patch>