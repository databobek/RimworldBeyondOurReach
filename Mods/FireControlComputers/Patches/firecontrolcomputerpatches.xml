        <enabled Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="FC_FireControl_Ultra"]/costList</xpath>
                    <value>
                        <costList>
                            <BOR_Sunsteel>200</BOR_Sunsteel>
                            <Silver>500</Silver>
                            <Gold>50</Gold>
                            <ComponentSpacer>8</ComponentSpacer>
