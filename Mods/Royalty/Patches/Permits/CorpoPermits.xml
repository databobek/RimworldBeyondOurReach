          <royalAid>
            <itemsToDrop>
              <BOR_Sunsteel>40</BOR_Sunsteel>
              <BOR_Tenebrite>50</BOR_Tenebrite>
              <BOR_ComponentIII>8</BOR_ComponentIII>
            </itemsToDrop>
