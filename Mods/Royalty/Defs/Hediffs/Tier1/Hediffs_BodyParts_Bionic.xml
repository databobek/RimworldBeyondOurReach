  <!-- Neurocalculator -->

  <HediffDef ParentName="BOR_ImplantSolarHediffBase">
    <defName>NeurocalculatorSolar</defName>
    <label>solar neurocalculator</label>
    <labelNoun>a solar neurocalculator</labelNoun>
