      <BOR_Sunsteel>75</BOR_Sunsteel>
      <BOR_ComponentII>4</BOR_ComponentII>
    </costList>
    <statBases>
      <ArmorRating_Sharp>2.25</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.90</ArmorRating_Blunt>
      <ArmorRating_Heat>1.125</ArmorRating_Heat>
