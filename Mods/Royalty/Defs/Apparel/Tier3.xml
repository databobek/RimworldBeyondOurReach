      <BOR_Sunsteel>75</BOR_Sunsteel>
      <BOR_ComponentIII>4</BOR_ComponentIII>
    </costList>
    <statBases>
      <ArmorRating_Sharp>3.375</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.35</ArmorRating_Blunt>
      <ArmorRating_Heat>1.6875</ArmorRating_Heat>
    
