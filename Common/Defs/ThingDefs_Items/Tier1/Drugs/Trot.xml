<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="MakeableDrugBase">
    <defName>BOR_Trot</defName>
    <label>trot</label>
    <description>A synthetic performance-enhancing drug developed for space marines during the early days of interplanetary warfare. trot blocks pain, increases movement speed, and improves the user's melee and shooting abilities.\n\nThe military chemists who created it were never able to remove its addictiveness. Some saw this as a downside; others saw it as a benefit.</description>
    <descriptionHyperlinks>
      <HediffDef>BOR_TrotHigh</HediffDef>
      <HediffDef>BOR_Sunsteel_Chemical_Addiction</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>BOR/Things/Item/Drugs/Tier1/Combat</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>900</WorkToMake>
      <MarketValue>79</MarketValue>
      <Mass>0.083</Mass>
    </statBases>
    <techLevel>Ultra</techLevel>
    <ingestible>
      <joyKind>Chemical</joyKind>
      <joy>0.40</joy>
      <drugCategory>Hard</drugCategory>
      <foodType>Processed, Fluid</foodType>
      <baseIngestTicks>80</baseIngestTicks>
      <ingestSound>Ingest_Inject</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Inject {0}</ingestCommandString>
      <ingestReportString>Injecting {0}.</ingestReportString>
      <useEatingSpeedStat>false</useEatingSpeedStat>
      <chairSearchRadius>0</chairSearchRadius>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>BOR_TrotHigh</hediffDef>
          <severity>0.75</severity>
          <toleranceChemical>BOR_Sunsteel_Chemical</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>0.6</offset>
          <toleranceChemical>BOR_Sunsteel_Chemical</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetPsyfocus">
          <offset>0.225</offset>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <!-- todo -->
      <researchPrerequisite>BOR_Research_Drugs_I</researchPrerequisite>
      <recipeUsers>
        <!-- todo -->
        <li>BOR_MedicineBench_I</li>
      </recipeUsers>
      <soundWorking>Recipe_Drug</soundWorking>
      <displayPriority>1500</displayPriority>
    </recipeMaker>
    <costList>
      <Neutroamine>2</Neutroamine>
      <BOR_Sunsteel>1</BOR_Sunsteel>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>BOR_Sunsteel_Chemical</chemical>
        <addictiveness>0.0216</addictiveness>
        <existingAddictionSeverityOffset>0.16</existingAddictionSeverityOffset>
        <needLevelOffset>0.9</needLevelOffset>
        <isCombatEnhancingDrug>true</isCombatEnhancingDrug>
        <listOrder>201</listOrder>
        <overdoseSeverityOffset>0.15~0.291</overdoseSeverityOffset>
        <largeOverdoseChance>0.004</largeOverdoseChance>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>BOR_TrotHigh</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>high on trot</label>
    <labelNoun>a trot high</labelNoun>
    <description>Trot in the bloodstream. It supercharges combat-related abilities, and instantly increases psyfocus when first injected.</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.625</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <painFactor>0.083</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.30</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.525</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.75</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>BOR_TrotHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>BOR_TrotHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>high on trot</label>
        <description>I got the trots and I love every single one of them.</description>
        <baseMoodEffect>7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- trot addiction -->

  <ChemicalDef>
    <defName>BOR_Sunsteel_Chemical</defName>
    <label>trot</label>
    <addictionHediff>BOR_Sunsteel_Chemical_Addiction</addictionHediff>
    <geneOverdoseChanceFactorResist>0.75</geneOverdoseChanceFactorResist>
    <geneOverdoseChanceFactorImmune>0</geneOverdoseChanceFactorImmune>
  </ChemicalDef>

  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>BOR_Sunsteel_Chemical</defName>
    <needClass>Need_Chemical</needClass>
    <label>trot</label>
    <description>Because of a sunstell chemical addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <fallPerDay>0.2775</fallPerDay>
    <listPriority>45</listPriority>
  </NeedDef>

  <HediffDef ParentName="AddictionBase">
    <defName>BOR_Sunsteel_Chemical_Addiction</defName>
    <label>sunsteel chemical addiction</label>
    <description>A chemical addiction to sunsteel chemicals. Long-term presence of trot has caused neurological adaptations at the cellular level, so the brain can no longer function properly without the drug. \nWithout regular doses of trot, withdrawal symptoms will begin. However, extended abstinence will force the brain to adapt back to its normal state, resolving the addiction.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <causesNeed>BOR_Sunsteel_Chemical</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.0675</severityPerDay>
        <showDaysToRecover>true</showDaysToRecover>
      </li>
    </comps>
    <stages>
      <li> </li>
      <li>
        <label>withdrawal</label>
        <painFactor>2.5</painFactor>
        <hungerRateFactorOffset>0.416</hungerRateFactorOffset>
        <statOffsets>
          <RestFallRateFactor>0.25</RestFallRateFactor>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.166</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.416</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.166</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.166</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.088</offset>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>Binging_DrugExtreme</mentalState>
            <mtbDays>60</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>15</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>BOR_Sunsteel_Chemical_Withdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>BOR_Sunsteel_Chemical_Addiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>sunsteel withdrawal</label>
        <!-- todo -->
        <description>my head hurtssss</description>
        <baseMoodEffect>-18</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>BOR_Sunsteel_Chemical_Tolerance</defName>
    <label>sunsteel chemical tolerance</label>
    <description>A built-up tolerance to sunsteel chemicals. The more severe this tolerance is, the more sunsteel chemicals it takes to get the same effect.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.015</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>BOR_Sunsteel_Chemical</chemical>
      </li>
    </comps>
    <hediffGivers>
      <li Class="HediffGiver_RandomDrugEffect">
        <hediff>ChemicalDamageModerate</hediff>
        <severityToMtbDaysCurve>
          <points>
            <li>(0.675, 99999)</li>
            <li>(0.75, 180)</li>
            <li>(1, 135)</li>
          </points>
        </severityToMtbDaysCurve>
        <partsToAffect>
          <li>Brain</li>
        </partsToAffect>
      </li>
    </hediffGivers>
  </HediffDef>

</Defs>