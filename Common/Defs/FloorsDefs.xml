  <TerrainTemplateDef>
    <defName>BOR_CarpetFine</defName>
    <label>kwazaari fine carpet</label>
    <description>Luxurious, ornately-patterned carpet made from fibers dyed a single color. Beautiful to look at, but cleaning it is a labor-intensive process.</description>
    <texturePath>BOR/Terrain/Surfaces/quasaralloycarpet</texturePath>
    <researchPrerequisites>
      <li>CarpetMaking</li>
      <li>BOR_Research_Analyzer_II</li>
    </researchPrerequisites>
    <burnedDef>BurnedCarpet</burnedDef>
    <designatorDropdown>BOR_Floor_Carpet_Fine</designatorDropdown>
    <ignoreIllegalLabelCharacterConfigError>true</ignoreIllegalLabelCharacterConfigError>
    <costList>
      <BOR_QuasarAlloyWeave>35</BOR_QuasarAlloyWeave>
    </costList>
    <statBases>
      <Beauty>8</Beauty>
      <Flammability>0.15</Flammability>
