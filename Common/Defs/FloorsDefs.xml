    </statBases>
    <tags>
      <li>Floor</li>
      <li>FineFloor</li>
    </tags>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <uiOrder>2110</uiOrder>
    <renderPrecedenceStart>200</renderPrecedenceStart>
  </TerrainTemplateDef>
  
  <DesignatorDropdownGroupDef>
