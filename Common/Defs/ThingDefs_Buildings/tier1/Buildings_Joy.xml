	<ThingDef ParentName="BuildingBase">
		<defName>BOR_MegascreenTelevision_I</defName>
		<label>solarscreen television</label>
		<designationCategory>BOR</designationCategory>
		<description>A massive high-tech television. Gigantic, hyper-vibrant images almost leap out of the screen. Very entertaining. Capable of picking up transmissions from most sources within the cosmos.</description>
		<graphicData>
			<texPath>BOR/Things/Building/tier1/tv/tv</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shadowData>
				<volume>(2.5, 0.6, 0.1)</volume>
				<offset>(0, 0, 0.2)</offset>
			</shadowData>
			<drawSize>(6,2)</drawSize>
			<drawOffsetNorth>(0,3,0.6)</drawOffsetNorth>
			<drawOffsetSouth>(0,3,0.6)</drawOffsetSouth>
			<drawOffsetWest>(0.2,0,0)</drawOffsetWest>
			<drawOffsetEast>(-0.2,0,0)</drawOffsetEast>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<rotatable>true</rotatable>
		<minifiedDef>MinifiedThing</minifiedDef>
		<socialPropernessMatters>true</socialPropernessMatters>
		<fillPercent>0.35</fillPercent>
		<defaultPlacingRot>South</defaultPlacingRot>
		<thingCategories>
			<li>BuildingsJoy</li>
		</thingCategories>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<costList>
			<BOR_Sunsteel>260</BOR_Sunsteel>
			<ComponentSpacer>22</ComponentSpacer>
		</costList>
		<statBases>
			<WorkToBuild>12000</WorkToBuild>
			<MaxHitPoints>127</MaxHitPoints>
			<Flammability>0.833</Flammability>
			<Mass>8.333</Mass>
			<JoyGainFactor>2.4</JoyGainFactor>
		</statBases>
		<pathCost>50</pathCost>
		<passability>PassThroughOnly</passability>
		<size>(6,1)</size>
		<building>
			<joyKind>Television</joyKind>
			<spawnedConceptLearnOpportunity>TVForSickPeople</spawnedConceptLearnOpportunity>
			<boughtConceptLearnOpportunity>TVForSickPeople</boughtConceptLearnOpportunity>
			<watchBuildingStandDistanceRange>2~9</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>9</watchBuildingStandRectWidth>
			<watchBuildingInSameRoom>true</watchBuildingInSameRoom>
			<effectWatching>WatchingTelevision</effectWatching>
		</building>
		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
		</placeWorkers>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>2500</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable" />
		</comps>
		<tradeTags>
			<li>Television</li>
		</tradeTags>
		<designatorDropdown>BOR_TVs</designatorDropdown>
	</ThingDef>
